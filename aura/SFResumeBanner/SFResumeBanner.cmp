								slds-align_absolute-center">
							<!-- github icon -->
							<div class="slds-col slds-size_1-of-6">
								<div class="slds-text-align_center">
									<img class="slds-m-around_small"
										 src="{!$Resource.SFResume +'/Assets/git_icon.svg'}" 
										 height="30" 
										 width="30"/>
								</div>
							</div>
							<!-- / github icon -->

							<!-- linkedin icon -->
