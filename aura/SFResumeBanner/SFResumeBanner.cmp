<aura:component >
	<div class="slds-grid
				slds-grid_vertical">
		
		<!-- Title -->
		<div class="slds-col
					slds-m-left_xx-large
					slds-m-top_xx-large">
			
			<div class="slds-text-title 
						slds-text-color_weak">
